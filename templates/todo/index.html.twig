{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">My Todo List</h1>
    <div class="container">
      <div class="search-container">

          {{ form_start(form) }}
        <div class="col-sm-3">
            {{ form_widget(form.number) }}
        </div>
          <div class="col-sm-3">
          {{ form_widget(form.name) }}

        </div>
        <div class="col-sm-3">
            {{ form_widget(form.category) }}
        </div>
        <div class="col-sm-3 pull-right">
        <button type="submit" class="btn btn-default" style="width: 100%"><i class="fa fa-search" ></i> Search Task</button>

          {{ form_end(form) }}
          <br>
        </div>
      </div>

<table class="table table-striped" style="margin-top: 7%;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Todo</th>
      <th scope="col">Due Date</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col"> Action </th>
    </tr>
  </thead>
  <tbody>


  {% for todo in searches %}
    <tr>
      <th scope="row">{{todo.id}}</th>
      <td>{{todo.name}}</td>
      <td>{{todo.dueDate|date('F j, Y, g:i a')}}</td>
      <td>{{todo.category}}</td>
      <td>{{ todo.description }}</td>
      <td>
      <a href="/todo/details/{{todo.id}}" class="btn btn-success">View</a>
      <a href="/todo/edit/{{todo.id}}" class="btn btn-default">Edit</a>
      <a href="/todo/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
     <div class="col-sm-3 pull-right">
      <a href="/todo/create" class="btn btn-primary" style="width: 100%">Add new Task</a>
    </div>
    </div>

{% endblock %}